---
import { SEVERITY_COLORS } from "../lib/severity";

interface Props {
  severity: string;
  count?: number;
}

const { severity, count } = Astro.props;
const colors = SEVERITY_COLORS[severity] || SEVERITY_COLORS.UNKNOWN;
---

<span
  class={`inline-flex items-center gap-1 px-2 py-0.5 rounded text-xs font-medium ${colors.bg} ${colors.text}`}
>
  {severity}
  {count !== undefined && <span>({count})</span>}
</span>
